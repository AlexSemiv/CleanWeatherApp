<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppCleanWeatherTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryDark">@color/purple_700</item>
        <item name="colorAccent">@color/purple_200</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>
        <item name="switchStyle">@style/SwitchStyle</item>
        <item name="searchViewStyle">@style/SearchViewStyle</item>
        <item name="autoCompleteTextViewStyle">@style/SearchAutoCompleteTextView</item>
        <item name="linearProgressIndicatorStyle">@style/LinearProgressIndicator</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItemStyle</item>
    </style>

    <style name="SpinnerItemStyle" parent="TextAppearance.AppCompat.Widget.TextView.SpinnerItem">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ImageButtonStyle" parent="Widget.AppCompat.ImageButton">
        <item name="android:background">@color/sea</item>
    </style>

    <style name="TextViewStyle" parent="android:Widget.TextView">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="TextViewSmallStyle">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleCentered">true</item>
        <item name="fontFamily">@font/tahoma_bold</item>
        <item name="subtitleTextColor">@android:color/black</item>
        <item name="titleTextColor">@android:color/black</item>
    </style>

    <style name="StaticImageView">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="SwitchStyle" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="fontFamily">@font/tahoma_bold</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView.ActionBar">
        <item name="iconifiedByDefault">false</item>
        <item name="defaultQueryHint">Find weather forecast..</item>
        <item name="closeIconEnabled">true</item>
    </style>

    <style name="SearchAutoCompleteTextView" parent="Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@android:color/black</item>
    </style>

    <style name="LinearProgressIndicator" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="indicatorColor">@color/colorPrimaryDark</item>
        <item name="trackCornerRadius">50dp</item>
        <item name="indeterminateAnimationType">disjoint</item>
        <item name="indicatorDirectionLinear">startToEnd</item>
        <item name="android:indeterminateBehavior">cycle</item>
        <item name="android:indeterminateOnly">true</item>
    </style>

    <style name="SearchRecyclerViewStyle">
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
    </style>

    <style name="LinearLayoutStyle">
        <item name="cornerRadius">20dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="LottieStyle">
        <item name="android:layout_width">40dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="lottie_autoPlay">true</item>
        <item name="lottie_loop">true</item>
        <item name="lottie_rawRes">@raw/storm_showers_day</item>
        <item name="android:repeatMode">restart</item>
    </style>

</resources>